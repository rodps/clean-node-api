// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime? 
  name      String
  email     String    @unique
  password  String

  @@map("users")
}

model Book {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
  title         String
  isbn          String
  pages         Int
  author        String
  edition       Int
  publisher     String
  description   String
  publish_date  String
  genre         String
  copies        Int

  @@map("books")
}